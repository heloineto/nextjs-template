{
  "name": "nextjs-template",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "spell": "cspell *",
    "format": "prettier --write . --ignore-path .gitignore",
    "prepare": "husky install"
  },
  "dependencies": {
    "@cspell/dict-pt-br": "^2.1.4",
    "@types/node": "20.1.0",
    "@types/react": "18.2.6",
    "@types/react-dom": "18.2.4",
    "autoprefixer": "10.4.14",
    "cspell": "^6.31.1",
    "eslint": "8.40.0",
    "eslint-config-next": "13.4.1",
    "husky": "^8.0.3",
    "next": "13.4.1",
    "postcss": "8.4.23",
    "prettier": "2.8.8",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "tailwindcss": "3.3.2",
    "typescript": "5.0.4",
    "@commitlint/cli": "^17.6.3",
    "@commitlint/config-conventional": "^17.6.3",
    "lint-staged": "^13.2.2"
  },
  "postcss": {
    "plugins": {
      "tailwindcss": {},
      "autoprefixer": {}
    }
  },
  "prettier": {
    "arrowParens": "always",
    "tabWidth": 2,
    "singleQuote": true,
    "trailingComma": "es5",
    "endOfLine": "auto",
    "useTabs": false,
    "semi": true
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "./**/*.*": [
      "prettier --write",
      "cspell"
    ],
    "./**/*.{js,jsx,ts,tsx}": "eslint --fix"
  },
  "cspell": {
    "import": [
      "@cspell/dict-pt-br/cspell-ext.json"
    ],
    "language": "en,pt,pt_BR",
    "ignorePaths": [
      "node_modules",
      "dist",
      "public",
      "pnpm-lock.yaml"
    ],
    "words": [
      "nextjs",
      "tailwindcss",
      "Parens",
      "esnext",
      "commitlint"
    ]
  }
}
